generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Problem {
  id             String     @id @default(uuid())
  title          String
  difficulty     Difficulty
  slug           String?    @unique
  statementUrl   String?
  exampleUrl     String?
  constraintsUrl String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @default(now())
}

model Submission {
  id         String   @id @default(uuid())
  problemId  String
  language   String
  sourceCode String
  status     String // PENDING | RUNNING | ACCEPTED | WA | TLE | CE
  runTime    Int?
  memory     Int?
  createdAt  DateTime @default(now())
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
